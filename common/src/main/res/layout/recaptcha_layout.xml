<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <com.moddakir.moddakir.ui.widget.TextViewCalibriBold
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_select_the_checkbox_below_to_proceed"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/_15sdp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="@drawable/custom_white_gray_border"
        android:layout_marginTop="@dimen/_4sdp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_15sdp">
        <CheckBox
            android:id="@+id/checkBox_recaptcha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorGray"
            android:layout_marginStart="@dimen/_11sdp"/>
        <ProgressBar
            android:id="@+id/recaptcha_progressbar"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_20sdp"
            android:visibility="gone"
            android:layout_marginStart="@dimen/_11sdp"/>
        <ImageView
            android:id="@+id/recaptcha_check_mark_iv"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/green_check_ic"
            android:visibility="gone"
            android:layout_marginStart="@dimen/_11sdp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp">
            <com.moddakir.moddakir.ui.widget.TextViewCalibriBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/i_m_not_a_robot"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/_8sdp" />
            <com.moddakir.moddakir.ui.widget.TextViewCalibriBold
                android:id="@+id/confirm_not_robot_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/please_confirm_that_you_are_not_a_robot"
                android:textColor="@color/red"
                android:textSize="@dimen/_7sdp"
                android:visibility="gone"/>
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/recaptcha_ic"
            android:layout_marginEnd="@dimen/_15sdp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>