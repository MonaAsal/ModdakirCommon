<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.Theme.ModdakirApps.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black75</item>
    </style>

    <style name="Widget.Theme.ModdakirApps.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black75</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="CustomEditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/colorPrimaryStudentTeacher</item>
        <item name="colorControlHighlight">@color/colorPrimaryStudentTeacher</item>

    </style>
    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="appCompactNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimaryStudentTeacher
        </item>

    </style>
    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimaryStudentTeacher</item>
        <item name="colorPrimaryDark">@color/colorPrimaryStudentTeacher</item>
        <item name="colorAccent">@color/purple</item>
    </style>
    <style name="AppTheme.Dialog" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize">
        <!-- removing the dialog's action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/colorRate</item>
    </style>
</resources>